<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="35dp"
            android:src="@drawable/vespa" />


        <TextView
            android:id="@+id/ListVehicleNumber"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="7dp"
            android:text="vehicle Number"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/SevenDayMileage"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="135dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="7dp"
            android:text="7day Milage"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/ThirtyDayMileage"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="210dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="7dp"
            android:text="30day Milage"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/OneYearMileage"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="295dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="7dp"
            android:text="1year Milage"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="12dp"
            android:textStyle="bold" />



    </RelativeLayout>


</LinearLayout>
