<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/UserRequset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="0dp"

        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">



        <RelativeLayout
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/admin_profile" />

            <TextView
                android:id="@+id/RequestUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="72dp"
                android:hint="User Name"
                android:layout_marginTop="5dp"
                android:textColor="@color/PrimaryDark2"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/RequestUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RequestUserName"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="1dp"
                android:hint="Offcial ID"
                android:textColor="@color/PrimaryDark2"
                android:textSize="14dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/RequestUserRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RequestUserId"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="1dp"
                android:hint="Rank"
                android:textColor="@color/PrimaryDark2"
                android:textSize="14dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/viewRequestNumber"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="23dp"
                android:layout_marginTop="10dp"
                android:text="Accept"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@drawable/buttonshape"
                android:backgroundTint="@color/Red"
                android:textSize="14dp"
                android:textStyle="bold"
                />


        </RelativeLayout>




    </androidx.cardview.widget.CardView>


</LinearLayout>